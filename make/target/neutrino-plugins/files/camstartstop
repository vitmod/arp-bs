#!/bin/sh
case $1 in
oscamstart)
rm /var/run/.mgos
rm /var/run/.mgcamd
rm /var/run/.wicardd
touch /var/run/.oscam
sleep 2
/etc/init.d/cam restart
	;;

oscamstop)
/etc/init.d/cam stop
sleep 2
rm /var/run/.oscam 
	;;

mgcamdstart)
rm /var/run/.mgos
rm /var/run/.oscam
rm /var/run/.wicardd
touch /var/run/.mgcamd
sleep 2
/etc/init.d/cam restart 
	;;

mgcamdstop)
/etc/init.d/cam stop
sleep 2
rm /var/run/.mgcamd 
	;;

mgosstart)
rm /var/run/.mgcamd
rm /var/run/.oscam
rm /var/run/.wicardd
touch /var/run/.mgos
sleep 2
/etc/init.d/cam restart
	;;

mgosstop)
/etc/init.d/cam stop
sleep 2
rm /var/run/.mgos
	;;

wicarddstart)
rm /var/run/.mgos
rm /var/run/.oscam
rm /var/run/.mgcamd
touch /var/run/.wicardd
sleep 2
/etc/init.d/cam restart
	;;

wicarddstop)
/etc/init.d/cam stop
sleep 2
rm /var/run/.wicardd
	;;
  
keyupdate)
#wget http://www.stbsw.com/sat/keys/Gbox_keys.tar.gz -O /tmp/Gbox_keys.tar.gz
#wget http://www.stbsw.com/sat/keys/Mgamd_CCcam.tar.gz -O /tmp/Mgamd_CCcam.tar.gz
#wget 'http://sat-forum.info/download/index.php?action=downloadfile&filename=ee.bin&directory=oscam_emu_dre2/keys/3c_centr&' -O /var/keys/ee.bin
#tar -xvf /tmp/Mgamd_CCcam.tar.gz -C /
#tar -xvf /tmp/Gbox_keys.tar.gz -C /
#sleep 2
chmod 644 /var/keys/*
#rm /Readme.txt
#rm /tmp/Mgamd_CCcam.tar.gz
#rm /tmp/Gbox_keys.tar.gz
/etc/init.d/cam restart 
	;;   
*)

exit 1
esac